@model SistemaGestionTareas.Modelos.Usuario

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contraseña)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contraseña)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>

<br />
<br />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre Proyecto</th>
            <th>Completado</th>
            <th>Tarea</th>
            <th>Prioridad</th>
            <th>Fecha Vencimiento</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var proyecto in Model.Proyectos)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-controller="Proyectos" asp-route-id="@proyecto.Id">@proyecto.Nombre</a>
                </td>
                <td>@proyecto.Completado</td>
                <td colspan="4"></td>
            </tr>
            @foreach (var tarea in proyecto.Tareas)
            {
                <tr>
                    <td></td>
                    <td></td>
                    <td style="padding-left: 2em;">
                        <a asp-action="Details" asp-controller="Tareas" asp-route-id="@tarea.Id">@tarea.Nombre</a>
                    </td>
                    <td>@tarea.Prioridad</td>
                    <td>@tarea.FechaVencimiento.ToShortDateString()</td>
                    <td>@tarea.Estado</td>
                </tr>
            }
        }
    </tbody>
</table>
